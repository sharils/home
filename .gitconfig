[alias]
	alias = !sh -c 'git config --get-regexp ^alias. | sed s/^alias.//'
	a = add
	c = commit
	ca = commit --amend
	cf = commit --edit --file=.git/COMMIT_EDITMSG
	cm = commit --message
	f = fetch --prune
	g = grep
	l = log --graph --oneline
	mt = mergetool
	rm = reset --merge
	p = push
[commit]
	gpgsign = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[include]
	path = ~/git/github.com/sharils/home/gitignore.gitconfig
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
	tool = vim-conflicted
[mergetool]
	keepBackup = false
[mergetool "vim-conflicted"]
	cmd = vim +Conflicted
