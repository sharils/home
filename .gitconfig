[alias]
	alias = !sh -c 'git config --get-regexp ^alias. | sed s/^alias.//'
	a = add
	au = add --update
	bb = bisect bad
	bg = bisect good
	bl = blame
	br = bisect restart
	bs = bisect start
	c = commit
	ca = commit --amend
	cam = commit --all --message
	ceF = commit --edit --file=.git/COMMIT_EDITMSG
	cg = config --global
	cm = commit --message
	co = checkout
	cr = revert
	czz = stash push
	f = fetch
	fi = flow init
	g = grep
	l = log --graph --oneline
	mt = mergetool
	rs = reset
	rsH = reset --hard
	p = push
[commit]
	gpgsign = true
	verbose = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[fetch]
	prune = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/git/github.com/sharils/home/gitignore.allowedSignersFile
[include]
	path = ~/git/github.com/sharils/home/delta.gitconfig
	path = ~/git/github.com/sharils/home/gitignore.gitconfig
	path = ~/git/github.com/sharils/home/vim-conflicted.gitconfig
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
[mergetool]
	keepBackup = false
