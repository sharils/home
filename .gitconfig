[alias]
	alias = !sh -c 'git config --get-regexp ^alias. | sed s/^alias.//'
	ap = add --patch
	c = commit
	cF = commit --edit --file=.git/COMMIT_EDITMSG
	cm = commit -m
	mt = mergetool
	p = push
[commit]
	gpgsign = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[include]
	path = ~/git/github.com/sharils/home/gitignore.gitconfig
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
	tool = vim-conflicted
[mergetool]
	keepBackup = false
[mergetool	"vim-conflicted"]
	cmd = vim +Conflicted
